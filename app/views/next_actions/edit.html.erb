<div class="flex max-w-6xl">
  <div class="xl:w-[15%]"></div>

  <div class="px-4 mt-16 w-full grow">
    <div class="flex justify-between mb-8">
      <h1 class="grow font-bold">
        Edit Next Action "<%= @next_action.name %>"
      </h1>
    </div>

    <div class="mb-8">
      <%= render "form", next_action: @next_action %>
    </div>

    <div>
      <%= button_to "Delete", next_action_path(@next_action),
        method: :delete, data: { confirm: "Are you sure?" }, class: "border border-black px-2 py-1" %>
    </div>
  </div>
</div>
