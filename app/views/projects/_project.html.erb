<%= link_to project,
  class: "flex justify-between border-b-2 py-2 transition border-b-2 " +
    if current_page?(project)
      "border-black text-black"
    else
      "border-gray-300 hover:border-black text-gray-600 hover:text-black"
    end do %>
  <span>
    <%= project.name %>

    <% if project.incubating? %>
      <span class="text-xs text-gray-500">
        incubating until <%= local_time_ago project.incubating_until %>
      </span>
    <% end %>
  </span>

  <% if current_page?(project) %>
    <span>&rarr;</span>
  <% end %>
<% end %>
